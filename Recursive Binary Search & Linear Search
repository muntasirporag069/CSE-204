//*******************  recursive Binary search   ***********

// complexity O(logn)
#include <bits/stdc++.h>
using namespace std;
int binary_search(int a[],int l,int r,int x)
{
    if(l>r)
        return -1;
    int m = l + (r - l) / 2;
    if(a[m]==x)
        return m;
    if(x<a[m])
        return binary_search(a, l, m - 1, x);
    return binary_search(a, m + 1, r, x);
}
int first_occutance(int a[],int x,int l,int r)
{
    if(a[0]==x)
        return 0;
    if (l > r)
        return -1;
    int m = l + (r - l) / 2;
    if(a[m]==x &&  a[m-1]!=x)
        return m;
    if(a[m]>=x)
        return first_occutance(a, x, l, m - 1);
    return first_occutance(a, x, m + 1, r);
}
int upper_bound(int a[],int n, int x, int l, int r) 
{
    if(a[0]>=x)
        return -1;
    if(a[n-1]<x)
        return n - 1;
    if (l > r)
        return -1;
    int m = l + (r - l) / 2;
    if (a[m] < x && a[m + 1] >= x)
        return m;
    if (a[m] >= x)
        return upper_bound(a, n, x, l, m - 1);
    return upper_bound(a, n, x, m + 1, r);
}
// bisection methood -> a modification of bin search
// find a positive root between a to b of any equation
