//******  recursive linear search *******

int linear_search(int a[],int n,int x,int i=0)
{
    if(i==n)
        return -1;
    if(a[i]==x)
        return i;
    return linear_search(a, n, x, ++i);
}
int main()
{
    return 0;
}
